<!DOCTYPE html>
<html>
<head>
  <title>Huli</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>

<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">Huli</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/admins">Home</a></li>
    </ul>
  </div>
</nav>
    <div class="formwrapper">
        <center>
            <h1>New Apprentice</h1>
                <%= form_for @apprentice do |p| %>
                <div class="form-inputs">
                    <%= p.label :name %><br />
                    <%= p.text_field :name, autofocus: true, class:"form-controll"%>
                </div>
                <div class="form-inputs">
                    <%= p.label :github %><br />
                    <%= p.text_field :github, class:"form-controll"%>
                </div>
                <div class="form-actions">
                    <%= p.submit "New Apprentice" %>
                </div>
                <% end %>
            </div>
        </center>
    </div>
</body>
</html>